        <BuildDependencies>
            <Dependency>bzip2</Dependency>
            <Dependency>zlib-devel</Dependency>
            <Dependency>icu4c-devel</Dependency>
            <Dependency>python-devel</Dependency>
            <Dependency>python3-devel</Dependency>
