            <Dependency versionFrom="0.113">polkit-devel</Dependency>
            <Dependency>libxslt</Dependency>
            <Dependency>xmlto</Dependency>
            <Dependency>util-linux</Dependency>
        </BuildDependencies>
    </Source>

