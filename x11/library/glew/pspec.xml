        <RuntimeDependencies>
            <Dependency>mesa-32bit</Dependency>
            <Dependency>glibc-32bit</Dependency>
            <Dependency>libX11-32bit</Dependency>
            <Dependency release="current">glew</Dependency>
        </RuntimeDependencies>

        <Files>
            <Path fileType="library">/usr/lib32</Path>
        </Files>
