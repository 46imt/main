            <Dependency>libopus-devel</Dependency>
            <Dependency>opusfile-devel</Dependency>
            <Dependency>libsdl2-devel</Dependency>
            <Dependency>libvorbis-devel</Dependency>
            <Dependency>fluidsynth-devel</Dependency>
